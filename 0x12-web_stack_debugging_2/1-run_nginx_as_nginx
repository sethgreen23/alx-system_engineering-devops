#!/usr/bin/env bash
# Check for root privileges
if [ "$(id -u)" -ne 0 ]; then
    echo "This script must be run as root" >&2
    exit 1
fi

# Check if port 8080 is being used and stop the process
port_pid=$(netstat -tulnp | grep ':8080' | awk '{print $7}' | cut -d/ -f1)
if [ -n "$port_pid" ]; then
    kill -9 "$port_pid"
fi

# Check if nginx user exists, and if not, create it
if ! id -u nginx &>/dev/null; then
    useradd --system --no-create-home --shell /bin/false nginx
fi

# Ensure correct permissions for Nginx configuration
chmod 644 /etc/nginx/nginx.conf

# Update nginx.conf to run as nginx user
sed -i 's/user www-data;/user nginx;/' /etc/nginx/nginx.conf

# Update default site configuration to listen on port 8080
sed -i 's/listen 80;/listen 8080;/g' /etc/nginx/sites-available/default

# Restart Nginx to apply changes
systemctl restart nginx
